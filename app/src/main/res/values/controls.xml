<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="WrapStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="PrimaryTextTiny" parent="WrapStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">9sp</item>
  </style>

  <style name="PrimaryTextSmall" parent="WrapStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="PrimaryTextMedium" parent="WrapStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="PrimaryTextLarge" parent="WrapStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">17sp</item>
  </style>

  <style name="SecondaryTextMedium" parent="WrapStyle">
    <item name="android:textColor">@color/ligthGray</item>
    <item name="android:textSize">14sp</item>
  </style>

</resources>